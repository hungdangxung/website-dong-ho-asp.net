@model DongHoDemo2.Models.Shipper

@{
    ViewData["Title"] = "Chi tiết người giao hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="header">
    <h1 class="page-header">
        Chi tiết người giao hàng
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li><a asp-area="Admin" asp-controller="AdminShippers" asp-action="Index">Quản lý người giao hàng</a></li>
        <li><a asp-area="Admin" asp-controller="AdminShippers" asp-action="Details">Chi tiết người giao hàng</a></li>
    </ol>
</div>
<div class="card">
    <div class="card-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <tbody>
                    <tr>
                        <td><b> ID:</b> </td>
                        <td> @Model.ShipperId</td>
                    </tr>
                    <tr>
                        <td> <b>Tên người giao hàng:</b></td>
                        <td> @Model.ShipperName</td>
                    </tr>
                    <tr>
                        <td> <b>Điện thoại:</b></td>
                        <td> @Model.Phone</td>
                    </tr>
                    <tr>
                        <td> <b>Công ty:</b></td>
                        <td> @Model.Company</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <a class="btn btn-success btn-group m-md-3" asp-action="Index">Quay lại</a>
    </div>

</div>
