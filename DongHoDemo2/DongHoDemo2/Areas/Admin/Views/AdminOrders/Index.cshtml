@model IEnumerable<DongHoDemo2.Models.Order>

@{
    ViewData["Title"] = "Order Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="header">
    <h1 class="page-header">
        Danh sách khách hàng
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li><a asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index">Quản lý khách hàng</a></li>
    </ol>
</div>
<div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="card">
            <div class="card-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Họ tên</th>
                                <th>Ngày đặt</th>
                                <th>Ngày giao</th>
                                <th>Trạng thái</th>
                                <th>ShipperID</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>@item.OrderId</td>
                                        <td>@item.Customer.FullName</td>
                                        <td>@item.OrderDate</td>
                                        <td>@item.ShipDate</td>
                                        <td>@item.TransactStatus.Status</td>
                                        <td>@item.ShipperID</td>
                                        <td>
                                            <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminOrders" asp-action="Details" asp-route-id="@item.OrderId">Xem</a>
                                            <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminOrders" asp-action="Edit" asp-route-id="@item.OrderId">Sửa</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>